<section class="custom-review-slider-main color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding" id="custom-slider-review--{{ section.id }}">
  <div class="custm-review-slider-inner">
    <div class="mb-8 text-{{ section.settings.text_alignment }}">
        {% assign total_rating = 0 %}
        {% assign review_count = section.blocks.size %}
        {% for block in section.blocks %}
          {% assign total_rating = total_rating | plus: block.settings.rating | plus: 0 %}
        {% endfor %}
        {% assign average_rating = total_rating | divided_by: review_count %}
        {% assign rounded_rating = average_rating | round %}
        <div class="stars">
          {% for i in (1..rounded_rating) %}
            <span>★</span>
          {% endfor %}
          {% assign empty_top = 5 | minus: rounded_rating %}
          {% for i in (1..empty_top) %}
            <span>☆</span>
          {% endfor %}
        </div>
        <div class="subheading">{{ section.settings.subheading }}</div>
        <h2 class="heading">{{ section.settings.heading }}</h2>
      </div>


    <div class="swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
        <div class="swiper-slide review-card color-{{ section.settings.color_scheme2 }}">
          <h5 class="swip-slider-name">{{ block.settings.name }}</h5>
          {% assign rating = block.settings.rating | plus: 0 %}
          {% assign empty_stars = 5 | minus: rating %}
          <div class="stars">
            {% for i in (1..rating) %}
              <span>★</span>
            {% endfor %}
            {% for i in (1..empty_stars) %}
              <span>☆</span>
            {% endfor %}
          </div>
          <p class="review-text">“{{ block.settings.review_text }}”</p>
        </div>
        {% endfor %}
      </div>
      <div class="swiper-pagination"></div>
      <div class="autoplay-progress">
        <div class="autoplay-progress-bar"></div>
        <span></span>
      </div>
    </div>
  </div>
</section>

