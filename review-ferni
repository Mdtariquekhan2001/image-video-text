<script>
  document.addEventListener('DOMContentLoaded', function () {
    const sectionId = '#custom-slider-review--{{ section.id }}';
    const section = document.querySelector(sectionId);

    if (!section) return;

    const swiperEl = section.querySelector('.swiper');
    const progressBar = section.querySelector('.autoplay-progress-bar');
    const progressText = section.querySelector('.autoplay-progress span');

    if (!swiperEl) return;

    new Swiper(swiperEl, {
      slidesPerView: 1,
      centeredSlides: true, 
      spaceBetween: 0,
      loop: true,
      autoplay: {
        delay: 4000,
        disableOnInteraction: false,
      },
      pagination: {
        el: section.querySelector('.swiper-pagination'),
        clickable: true,
      },
      breakpoints: {
        640: {
          slidesPerView: 1,
          centeredSlides: true,
          spaceBetween: 0,
        },
        1024: {
          slidesPerView: 3.5,
          spaceBetween: 80,
          centeredSlides: false,
        },
      },
      on: {
        autoplayTimeLeft(swiper, time, progress) {
          if (progressBar) {
            progressBar.style.width = `${progress * 100}%`;
          }
          if (progressText) {
            progressText.textContent = `${Math.ceil(time / 1000)}s`;
          }
        },
      },
    });
  });
</script>



