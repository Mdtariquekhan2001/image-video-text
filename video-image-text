<script>
  function initializeCustomSlider() {
    const $slider = $('.custom-slider-block-image');
    if ($slider.hasClass('slick-initialized')) {
      $slider.slick('unslick'); 
    }

    $slider.slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      autoplay: {{ section.settings.slider_a }},
      autoplaySpeed: 2000,
      dots: {{ section.settings.show_dots | default: false }},
      arrows: {{ section.settings.show_arrows | default: false }},
      prevArrow: `<button type="button" class="slick-prev custom-arrow">
        <svg width="35px" height="35px" viewBox="0 0 1024 1024" class="icon cust-svg-959598" xmlns="http://www.w3.org/2000/svg" fill="#000000">
          <path d="M768 903.232l-50.432 56.768L256 512l461.568-448 50.432 56.768L364.928 512z" fill="#000000"></path>
        </svg>
      </button>`,
      nextArrow: `<button type="button" class="slick-next custom-arrow">
        <svg width="35px" height="35px" viewBox="0 0 1024 1024" class="icon cust-svg-959598" xmlns="http://www.w3.org/2000/svg" fill="#000000" style="transform: rotate(180deg);">
          <path d="M768 903.232l-50.432 56.768L256 512l461.568-448 50.432 56.768L364.928 512z" fill="#000000"></path>
        </svg>
      </button>`
    });
  }

  document.addEventListener("DOMContentLoaded", function () {
    initializeCustomSlider();
    document.querySelectorAll('[data-tab], .some-dynamic-trigger').forEach(el => {
      el.addEventListener('click', function () {
        setTimeout(initializeCustomSlider, 100);
      });
    });
  });
</script>
