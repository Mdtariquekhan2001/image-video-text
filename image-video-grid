<script>
  var slickInitialized = false;

  function initOrDestroySlider() {
    if (window.innerWidth <= 768) {
      if (!slickInitialized) {
        $('.mobile-columns-3').slick({
          dots: true,
          infinite: true,
          speed: 300,
          slidesToShow: 1,
          arrows: false,
          centerMode: true,
          variableWidth: true
        });
        slickInitialized = true;
      }
    } else {
      if (slickInitialized) {
        $('.mobile-columns-3').slick('unslick');
        slickInitialized = false;
      }
    }
  }

  $(document).ready(function() {
    initOrDestroySlider();
  });

  $(window).on('resize', function() {
    initOrDestroySlider();
  });
</script>



