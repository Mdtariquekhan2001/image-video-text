                   <script>
                     document.addEventListener('DOMContentLoaded', function () {
                       const sizeChartBtn = document.getElementById('size-chart-btn');
                       const sizeChartPopup = document.getElementById('size-chart-popup');
                       const closePopup = document.getElementById('close-popup');
                   
                       sizeChartBtn.addEventListener('click', function () {
                         sizeChartPopup.style.display = 'flex';
                       });
                   
                       closePopup.addEventListener('click', function () {
                         sizeChartPopup.style.display = 'none';
                       });
                   
                       window.addEventListener('click', function (e) {
                         if (e.target === sizeChartPopup) {
                           sizeChartPopup.style.display = 'none';
                         }
                       });
                     });
                   </script>
